<?xml version="1.0" encoding="utf-8"?>

<!--the root view must be the DrawerLayout-->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="ANIMALUTELE MELE"
            android:textColor="#795548"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:background="#DBE2E8"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="182dp"
                android:layout_height="162dp"
                android:layout_margin="8dp"
                android:background="#9E6060"
                android:orientation="vertical"
                android:paddingLeft="55dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Adauga pisica"
                    android:textStyle="bold"
                    tools:text="Adauga pisica" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    app:cardBackgroundColor="#685959">

                    <ImageButton
                        android:id="@+id/imageButton3"
                        style="@style/add_animal"
                        android:layout_width="82dp"
                        android:layout_height="98dp"
                        android:layout_margin="3dp"
                        tools:ignore="RtlHardcoded,TouchTargetSizeCheck" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="183dp"
                android:layout_height="162dp"
                android:layout_margin="8dp"
                android:background="#397166"
                android:orientation="vertical"
                android:paddingLeft="50dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Adauga caine"
                    android:textStyle="bold"
                    tools:text="Adauga caine" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#414C3B">

                    <ImageButton
                        android:id="@+id/imageButton4"
                        style="@style/add_animal"
                        android:layout_width="82dp"
                        android:layout_height="98dp"
                        android:layout_margin="3dp"

                        tools:ignore="RtlHardcoded,TouchTargetSizeCheck" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--this the navigation view which draws
        and shows the navigation drawer-->
    <!--include the menu created in the menu folder-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" >

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>